@model TravelBlog.Models.Sınıflar.Blog

@{
    ViewBag.Title = "FindBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>FindBlog</h2>
<br />
@using (Html.BeginForm("UpdateBlog", "Admin", FormMethod.Post))
{
<form class="form-group" method="post">
        @Html.LabelFor(x => x.ID)
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control" ,@readonly = "readonly" })
        <br />
        @Html.LabelFor(x => x.Baslik)
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Tarih)
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.BlogImage)
        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Aciklama)
        @Html.TextAreaFor(x => x.Aciklama, 15, 1, new { @class = "form-control" })@*row,column knowledge*@
    <br />
    <button class="btn btn-primary">UpdateBlog</button>

</form>
}

