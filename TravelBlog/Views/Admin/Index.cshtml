@using TravelBlog.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.Baslik</td>
                <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Delete</a></td>
                <td><a href="/Admin/FindBlog/@x.ID" class="btn btn-warning">Update</a></td>
                <td><a href="#" class="btn btn-default">Default</a></td>


            </tr>

        }

    </tbody>



</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">New Blog</a>

