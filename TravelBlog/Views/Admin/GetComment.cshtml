@model TravelBlog.Models.Sınıflar.Comment
@{
    ViewBag.Title = "GetComment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>GetComment</h2>


<br />
@using (Html.BeginForm("UpdateComment", "Admin", FormMethod.Post))
{
    <form class="form-group" method="post">
        @Html.LabelFor(x => x.ID)
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.LabelFor(x => x.KullaniciAdi)
        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Mail)
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Comments)
        @Html.TextAreaFor(x => x.Comments,15,1,new { @class = "form-control" })
        <br />
        
        <button class="btn btn-primary">UpdateBlog</button>

    </form>
}

